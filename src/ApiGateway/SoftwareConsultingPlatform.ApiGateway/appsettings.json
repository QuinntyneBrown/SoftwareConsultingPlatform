{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "AllowedOrigins": [
    "http://localhost:4200",
    "http://localhost:5000"
  ],
  "Jwt": {
    "Secret": "YourSuperSecretKeyThatIsAtLeast32CharactersLong!",
    "Issuer": "SoftwareConsultingPlatform",
    "Audience": "SoftwareConsultingPlatform"
  },
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/auth/{**catch-all}" }
        ]
      },
      "users-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/users/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/users/{**catch-all}" }
        ],
        "AuthorizationPolicy": "authenticated",
        "RateLimiterPolicy": "per-user"
      },
      "tenants-route": {
        "ClusterId": "tenant-cluster",
        "Match": {
          "Path": "/api/tenants/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/tenants/{**catch-all}" }
        ]
      },
      "services-route": {
        "ClusterId": "services-cluster",
        "Match": {
          "Path": "/api/services/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/services/{**catch-all}" }
        ],
        "RateLimiterPolicy": "per-ip"
      },
      "case-studies-route": {
        "ClusterId": "casestudies-cluster",
        "Match": {
          "Path": "/api/case-studies/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/case-studies/{**catch-all}" }
        ],
        "RateLimiterPolicy": "per-ip"
      },
      "homepage-route": {
        "ClusterId": "content-cluster",
        "Match": {
          "Path": "/api/homepage/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/homepage/{**catch-all}" }
        ],
        "RateLimiterPolicy": "per-ip"
      }
    },
    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "identity-service": {
            "Address": "https+http://identity-service"
          }
        },
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "tenant-cluster": {
        "Destinations": {
          "tenant-service": {
            "Address": "https+http://tenant-service"
          }
        },
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "services-cluster": {
        "Destinations": {
          "services-service": {
            "Address": "https+http://services-service"
          }
        },
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "casestudies-cluster": {
        "Destinations": {
          "casestudies-service": {
            "Address": "https+http://casestudies-service"
          }
        },
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "content-cluster": {
        "Destinations": {
          "content-service": {
            "Address": "https+http://content-service"
          }
        },
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      }
    }
  }
}
